{
  "realm": "${DEFAULT_PROJECT_REALM}",
  "enabled": true,
  "sslRequired": "external",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,

  "roles": {
    "realm": [
      {
        "name": "${DEFAULT_REALM_ADMIN_ROLE_NAME}",
        "description": "Administrator role with full access"
      }
    ]
  },

  "users": [
    {
      "username": "${DEFAULT_REALM_ADMIN_USER}",
      "enabled": true,
      "email": "${DEFAULT_REALM_ADMIN_EMAIL}",
      "emailVerified": true,
      "firstName": "Admin",
      "lastName": "User",
      "credentials": [
        {
          "type": "password",
          "value": "${DEFAULT_REALM_ADMIN_PASSWORD}",
          "temporary": false
        }
      ],
      "realmRoles": [
        "${DEFAULT_REALM_ADMIN_ROLE_NAME}",
        "offline_access",
        "uma_authorization",
        "default-roles-${DEFAULT_PROJECT_REALM}"
      ],
      "clientRoles": {
        "account": [
          "manage-account",
          "manage-account-links",
          "view-profile"
        ]
      }
    }
  ],

  "clients": [
    {
      "clientId": "${DEFAULT_REALM_CLIENT_ID}",
      "name": "Codeflix Frontend Application",
      "enabled": true,
      "publicClient": true,
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "implicitFlowEnabled": false,
      "rootUrl": "",
      "baseUrl": "",
      "redirectUris": ["/*"],
      "webOrigins": ["/*"],
      "protocol": "openid-connect",
      "fullScopeAllowed": true
    }
  ]
}
